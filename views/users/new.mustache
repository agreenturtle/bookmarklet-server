<html>
  <head>
    {{>templates/header}}
  </head>
  <body>
    <div class="wrapper">
      <div class="container">
        {{>templates/navbar}}

        {{#duplicate}}
          <div class="alert alert-danger" role="alert"> Username has been taken, please try a different username </div>
        {{/duplicate}}

        <form class="form col-sm-12" action="/admin/users/" method="post">
          <div class="form-group">
            <label> Username </label>
            <input class="form-control" name="username" value="{{#user_data}}{{username}}{{/user_data}}" />
          </div>
          <div class="form-group">
            <label> Password </label>
            <input type="password" class="form-control" name="password" value="{{#user_data}}{{password}}{{/user_data}}"/>
          </div>
          <div class="form-group">
            <label> Permission </label>
            <select class="form-control" name="permission">
              <option value="Admin"> Admin </option>
              <option value="Guest" {{#user_data}}{{#isGuest}}selected{{/isGuest}}{{/user_data}}> Guest </option>
            </select>
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit"> Add New User </button>
            <a href="/admin/users" class="btn btn-danger"> Cancel </a>
          </div>
        </form>

      </div>
    </div>
  </body>
</html>
