<html>
  <head>
    {{>templates/header}}
  </head>
  <body>
    <div class="wrapper">
      <div class="container">
        {{>templates/navbar}}

        <a href="/admin/mappings/new" class="btn btn-default"> Add New Application Code </a>

        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th> Application </th>
              <th> Code </th>
              <th> </th>
              <th> </th>
            </tr>
          </thead>
          <tbody>
            {{#mappings}}
              <tr>
                <td><a href="/admin/mappings/{{id}}"><div name="cell">{{type}}</div></a></td>
                <td><a href="/admin/mappings/{{id}}"><div name="cell" id="code">{{mapping}}</div></a></td>
                <td><a href="/admin/mappings/{{id}}" class="btn btn-warning btn-sm"><div name="cell"> Edit </div></a></td>
                <td>
                  <form action="/admin/mappings/{{id}}?_method=delete" method="post">
                    <button type="submit" class="btn btn-danger btn-sm"> Delete </button>
                  </form>
                </td>
              </tr>
            {{/mappings}}
          </tbody>
        </table>

      </div>
    </div>
    <script>
      var aA=document.querySelectorAll("#code");
      for(var i=0;i<aA.length;i++){
        aA[i].textContent = aA[i].textContent.replace(/%0A/g,"\r\n").replace(/&amp;/g, "&").replace(/&gt/g, ">;").replace(/&lt/g, "<;").replace(/&quot;/g, '"').replace(/&#x2F;/g,"/").replace(/&#39;/g,"'");
      }
    </script>
  </body>
</html>
